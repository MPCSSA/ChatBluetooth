<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Material">  <!-- android:Theme.Material -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:editTextColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:colorControlHighlight">@color/light_primary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:colorAccent">@color/light_primary</item>
    </style>

    <style name="MyButton"
        parent="android:Widget.Material.Button">
        <item name="android:background">
            @drawable/ripple_button
        </item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Material.Dialog">
        <item name="android:colorAccent">@color/calendar</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="EmoticonAnim">
        <item name="android:windowEnterAnimation">@anim/abc_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/abc_slide_out_bottom</item>
    </style>

</resources>
