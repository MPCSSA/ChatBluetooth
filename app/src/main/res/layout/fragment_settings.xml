<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.christian.chatbluetooth.view.Fragments.SettingsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/setting_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setting_image" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/setting_list"
            android:layout_below="@+id/setting_image"
            android:layout_marginTop="48dp">
        </ListView>

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/picture"
            android:layout_gravity="bottom|end"
            android:backgroundTint="@color/accent"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/setting_image"
            android:layout_marginBottom="-32dp"
            android:layout_marginRight="16dp"
            app:fab_colorPressed="@color/accent"
            app:fab_colorRipple="@color/light_primary"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp"/>

    </RelativeLayout>

</FrameLayout>
